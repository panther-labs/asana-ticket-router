[FORMAT]
max-line-length=140
max-locals=25

[MASTER]
# Allow relative imports from each lambda's parent directory
init-hook="from pylint.config import find_pylintrc; import os, sys; sys.path.append(os.path.join(os.path.dirname(find_pylintrc()), 'sentry_asana', 'src')); sys.path.append(os.path.join(os.path.dirname(find_pylintrc()), 'sentry_asana', 'tests'))"
disable=
    C0114, # missing-module-docstring
    W0511, # fixme
    R0903  # too-few-public-methods
ignore-patterns=^.*test_.*?py
# The dependency_injector really doesn't play well
# with pylint, unfortunatly.
extension-pkg-allow-list=dependency_injector
